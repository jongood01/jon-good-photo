---
export interface Props {
  type?: 'text' | 'email' | 'tel' | 'password' | 'number'
  label: string
  name: string
  id?: string
  placeholder?: string
  required?: boolean
  rows?: number
  class?: string
}

const { type = 'text', label, name, id = name, placeholder, required = false, rows, class: className = '', ...rest } = Astro.props
---

<div class={className}>
  <label for={id} class="block text-sm font-medium text-gray-700 mb-2">
    {label}
    {required && <span class="text-red-500">*</span>}
  </label>
  {
    rows ? (
      <textarea
        id={id}
        name={name}
        required={required}
        rows={rows}
        placeholder={placeholder}
        class="w-full px-4 py-3 border border-black focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors resize-vertical"
        {...rest}
      />
    ) : (
      <input
        type={type}
        id={id}
        name={name}
        required={required}
        placeholder={placeholder}
        class="w-full px-4 py-3 border border-black focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
        {...rest}
      />
    )
  }
</div>
